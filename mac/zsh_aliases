# fi

# History size
HISTFILESIZE=500000
HISTSIZE=500000

# gpg-agent, see https://gist.github.com/bmhatfield/cc21ec0a3a2df963bffa3c1f884b676b#file-gpg-agent-conf
if [ -f ~/.gnupg/.gpg-agent-info ] && [ -n "$(pgrep gpg-agent)" ]; then
    source ~/.gnupg/.gpg-agent-info
    export GPG_AGENT_INFO
else
    eval $(gpg-agent --daemon --write-env-file ~/.gnupg/.gpg-agent-info)
fi

# Mercurial commands
# 'mate' comes from the TextMate app
alias hgc="hg commit"
alias hgd="hg diff|mate"
alias hgup="~/github/scripts/mac/sync_hg_mac.sh"

# Git commands
alias gitc="git commit -a"
alias gitd="git diff|mate"
alias git_branch="~/github/scripts/git/git_branch.sh"
alias git_clone="~/github/scripts/git/git_clone.sh"
alias git_update="~/github/scripts/git/git_update.sh"
alias git_updateall="~/github/scripts/git/git_updateall.sh"
alias gitup="git_updateall ~/github/"

# Mozilla l10n commands
alias trunkst="cd ~/mozilla/mercurial/firefox-l10n/it"
alias trunkstu="cd ~/mozilla/mercurial/firefox-l10n/it;git pull"

alias cmp_moz="compare-locales ~/mozilla/mercurial/mozilla-unified/browser/locales/l10n.toml ~/mozilla/mercurial/firefox-l10n it"
alias cmp_mozx="compare-locales ~/mozilla/mercurial/firefox-quarantine/_configs/browser.toml ~/mozilla/mercurial/firefox-l10n it"
